# Database Configuration
# Эти переменные должны совпадать с настройками в infrastructure/.env
POSTGRES_DB=brashlens_db
POSTGRES_USER=govardvolov
POSTGRES_PASSWORD=your_secure_password_here

# Database Connection URL (for application)
# Используем имена контейнеров из infrastructure
DATABASE_URL=postgresql://govardvolov:your_secure_password_here@brashlens_postgres:5432/brashlens_db

# Redis Configuration
REDIS_URL=redis://brashlens_redis:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://brashlens_redis:6379/0
CELERY_RESULT_BACKEND=redis://brashlens_redis:6379/0

# Application Configuration
APP_NAME=BrashLens
APP_ENV=development
DEBUG=True
SECRET_KEY=your_secret_key_here_change_in_production

# CORS Configuration
# Для разработки можно использовать ["*"] для разрешения всех origins
# Для продакшна укажите конкретные домены: ["https://yourdomain.com"]
ALLOWED_ORIGINS=["*"]
ALLOWED_METHODS=["*"]
ALLOWED_HEADERS=["*"]

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
WEBHOOK_URL=

# Logging
LOG_LEVEL=INFO
