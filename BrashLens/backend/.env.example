# Database Configuration
# Эти переменные должны совпадать с настройками в infrastructure/.env
POSTGRES_DB=brashlens_db
POSTGRES_USER=brashlens_user
POSTGRES_PASSWORD=your_secure_password_here

# Database Connection URL (for application)
# Используем имена контейнеров из infrastructure
DATABASE_URL=postgresql://brashlens_user:your_secure_password_here@brashlens_postgres:5432/brashlens_db

# Redis Configuration
REDIS_URL=redis://brashlens_redis:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://brashlens_redis:6379/0
CELERY_RESULT_BACKEND=redis://brashlens_redis:6379/0

# Application Configuration
APP_NAME=BrashLens
APP_ENV=development
DEBUG=True
SECRET_KEY=your_secret_key_here_change_in_production

# API Configuration
API_V1_PREFIX=/api/v1
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Telegram Bot Configuration (if needed)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_WEBHOOK_URL=

# Logging
LOG_LEVEL=INFO
